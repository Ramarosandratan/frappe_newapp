<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Salary Slip</title>
    <style>
        body {
            font-family: sans-serif;
            font-size: 10pt;
        }

        .container {
            width: 100%;
            margin: 0 auto;
        }

        .card {
            border: 1px solid #ddd;
            border-radius: 4px;
            margin-bottom: 20px;
        }

        .card-header {
            background-color: #f5f5f5;
            padding: 10px 15px;
            border-bottom: 1px solid #ddd;
        }

        .card-body {
            padding: 15px;
        }

        h1, h2, h3, h4 {
            margin-top: 0;
            margin-bottom: 10px;
        }

        p {
            margin-top: 0;
            margin-bottom: 10px;
        }

        .row {
            display: flex;
            margin-right: -15px;
            margin-left: -15px;
        }

        .col-md-6 {
            width: 50%;
            padding-right: 15px;
            padding-left: 15px;
        }

        .list-group {
            padding-left: 0;
            margin-bottom: 0;
        }

        .list-group-item {
            position: relative;
            display: block;
            padding: 10px 15px;
            background-color: #fff;
            border: 1px solid rgba(0,0,0,.125);
        }

        .d-flex {
            display: flex !important;
        }

        .justify-content-between {
            justify-content: space-between !important;
        }

        hr {
            margin-top: 20px;
            margin-bottom: 20px;
            border: 0;
            border-top: 1px solid #eee;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Salary Slip</h1>

        <div class="card">
            <div class="card-header">
                <h2>{{ payslip.employee_name }}</h2>
            </div>
            <div class="card-body">
                <p><strong>Employee ID:</strong> {{ payslip.employee }}</p>
                <p><strong>Period:</strong> {{ payslip.start_date|date('d/m/Y') }} - {{ payslip.end_date|date('d/m/Y') }}</p>
                <p><strong>Posting Date:</strong> {{ payslip.posting_date|date('d/m/Y') }}</p>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h3>Earnings</h3>
                    </div>
                    <ul class="list-group">
                        {% for earning in payslip.earnings %}
                            <li class="list-group-item d-flex justify-content-between">
                                <span>{{ earning.salary_component }}</span>
                                <span>{{ earning.amount|number_format(2, '.', ',') }}</span>
                            </li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h3>Deductions</h3>
                    </div>
                    <ul class="list-group">
                        {% for deduction in payslip.deductions %}
                            <li class="list-group-item d-flex justify-content-between">
                                <span>{{ deduction.salary_component }}</span>
                                <span>{{ deduction.amount|number_format(2, '.', ',') }}</span>
                            </li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
        </div>

        <div class="card" style="margin-top: 20px;">
            <div class="card-body">
                <p class="d-flex justify-content-between"><strong>Gross Pay:</strong> <span>{{ payslip.gross_pay|number_format(2, '.', ',') }}</span></p>
                <p class="d-flex justify-content-between"><strong>Total Deductions:</strong> <span>{{ payslip.total_deduction|number_format(2, '.', ',') }}</span></p>
                <hr>
                <h4 class="d-flex justify-content-between"><strong>Net Pay:</strong> <span>{{ payslip.net_pay|number_format(2, '.', ',') }}</span></h4>
            </div>
        </div>
    </div>
</body>
</html>
