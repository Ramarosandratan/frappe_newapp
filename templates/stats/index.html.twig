{% extends 'base.html.twig' %}

{% block title %}Statistiques des Salaires{% endblock %}

{% block body %}
<div class="container-fluid mt-4">
    <h1 class="mb-4">Statistiques des Salaires</h1>

    <div class="mb-3">
        <a href="{{ path('app_stats_monthly_summary') }}" class="btn btn-info">Voir le Récapitulatif Mensuel par Employé</a>
    </div>

    <div class="row mb-3">
        <div class="col-md-3">
            <form action="{{ path('app_stats') }}" method="get">
                <div class="input-group">
                    <select name="year" class="form-control" onchange="this.form.submit()">
                        {% for year in years %}
                            <option value="{{ year }}"{{ year == selectedYear ? ' selected' : '' }}>{{ year }}</option>
                        {% endfor %}
                    </select>
                    <div class="input-group-append">
                        <button class="btn btn-primary" type="submit">Filtrer</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-header">
            Évolution Mensuelle des Salaires
        </div>
        <div class="card-body">
            {% if chart is defined and monthlyEvolutionData|length > 0 %}
                <div class="alert alert-success">
                    Debug: Chart object exists and data is available ({{ monthlyEvolutionData|length }} months)
                </div>
                <div class="row mb-3">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="chartType">Type de graphique:</label>
                            <select id="chartType" class="form-control">
                                <option value="line">Ligne</option>
                                <option value="bar">Barre</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Afficher les composants:</label>
                            <div id="componentCheckboxes">
                                {% for component in allComponents %}
                                    <div class="form-check form-check-inline">
                                        <input class="form-check-input" type="checkbox" id="component-{{ component|replace({' ': '-'}) }}" value="{{ component }}" data-component="{{ component }}">
                                        <label class="form-check-label" for="component-{{ component|replace({' ': '-'}) }}">{{ component }}</label>
                                    </div>
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                </div>
                <div style="height: 400px; border: 2px solid #007bff; padding: 10px;" data-controller="chart chart-custom">
                    {{ render_chart(chart) }}
                </div>
            {% elseif chart is defined %}
                <div class="alert alert-warning">
                    Debug: Chart object exists but no monthly data ({{ monthlyEvolutionData|length }} months)
                </div>
            {% else %}
                <div id="noDataMessage" class="alert alert-info text-center">
                    Debug: No chart object created - Aucune donnée d'évolution mensuelle disponible pour l'année sélectionnée.
                </div>
            {% endif %}
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-bordered table-striped table-hover">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Mois</th>
                    {% for component in allComponents %}
                        <th scope="col" class="text-center">{{ component }}</th>
                    {% endfor %}
                    <th scope="col" class="text-right">Total Brut</th>
                    <th scope="col" class="text-right">Total Déductions</th>
                    <th scope="col" class="text-right">Total Net</th>
                </tr>
            </thead>
            <tbody>
                {% for data in monthlyEvolutionData %}
                    <tr>
                        <td><strong><a href="{{ path('app_stats_monthly_detail', {'startDate': data.month ~ '-01', 'endDate': (data.month ~ '-01')|date('Y-m-t')}) }}"><span class="month-year-display" data-month-year="{{ data.month|date('Y-m') }}"></span></a></strong></td>
                        {% for component in allComponents %}
                            <td class="text-center">{{ data.components[component]|default(0)|number_format(2, ',', ' ') }}</td>
                        {% endfor %}
                        <td class="text-right font-weight-bold">{{ data.totalGrossPay|number_format(2, ',', ' ') }}</td>
                        <td class="text-right text-danger">({{ (data.totalGrossPay - data.totalNetPay)|number_format(2, ',', ' ') }})</td>
                        <td class="text-right font-weight-bold text-success">{{ data.totalNetPay|number_format(2, ',', ' ') }}</td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="{{ allComponents|length + 4 }}" class="text-center">Aucune donnée à afficher.</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            console.log('DOM loaded, checking for chart elements...');
            
            // Debug: vérifier si Chart.js est chargé
            if (typeof Chart !== 'undefined') {
                console.log('Chart.js is loaded, version:', Chart.version);
            } else {
                console.error('Chart.js is not loaded!');
            }
            
            // Debug: vérifier les éléments canvas
            const canvasElements = document.querySelectorAll('canvas');
            console.log('Found canvas elements:', canvasElements.length);
            canvasElements.forEach((canvas, index) => {
                console.log(`Canvas ${index}:`, canvas);
                if (canvas.chart) {
                    console.log(`Canvas ${index} has chart:`, canvas.chart);
                }
            });
            
            // Fonction pour formater le mois en français
            function formatMonthYear(dateString) {
                const [year, month] = dateString.split('-');
                const date = new Date(year, month - 1); // month - 1 car les mois sont de 0 à 11
                return date.toLocaleString('fr-FR', { month: 'long', year: 'numeric' });
            }

            // Mettre à jour les noms de mois après le chargement du DOM
            document.querySelectorAll('.month-year-display').forEach(span => {
                const monthYear = span.dataset.monthYear;
                span.textContent = formatMonthYear(monthYear);
            });
        });
    </script>
{% endblock %}
