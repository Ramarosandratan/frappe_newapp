{% extends 'base.html.twig' %}

{% block title %}Import CSV{% endblock %}

{% block body %}
<div class="container">
    <h1>Import CSV Files</h1>

    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}

    {{ form_start(form, {'attr': {'id': 'csv-import-form'}}) }}
    {{ form_widget(form._token) }}
    {{ form_row(form.employee_file) }}
    {{ form_row(form.structure_file) }}
    {{ form_row(form.data_file) }}
    <button type="submit" class="btn btn-primary">Import All</button>
    {{ form_end(form, {'render_rest': true}) }}
</div>
{% endblock %}
